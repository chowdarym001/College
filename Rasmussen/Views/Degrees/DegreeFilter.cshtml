@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@model Rasmussen.Models.FourColumnContentBlockModel

<div class="filter-area">
    @Html.Raw(Model.Body)
  
</div><section class="section section-degrees">
  <div class="container">
    <section class="section-content">
      <div class="grid-x program-grid medium-up-2 large-up-3 xlarge-up-4">
            @foreach (var column in Model.ContentCards)
             {
          <div class="program-card cell cell-block @Html.Raw(column.Title)">
          	<div class="program-card-meta">
                  @Html.Raw(column.Body)
          		
          	</div>
          </div>
            }
           </div>
    </section>
    <footer class="section-footer no-results">
        @Html.Raw(Model.Footer)
    </footer>
  </div>
</section>
